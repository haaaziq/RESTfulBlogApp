<%- include("partials/header") %>

<div class="ui main text container segment">
    <h1 class="ui huge header">Add a new Blog</h1>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Blog Title">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea rows="8" name="blog[body]" placeholder="Enter about your Blog"></textarea>
        </div>
        <button class="ui big button" type="submit">Post</button>
    </form>
</div>

<%- include("partials/footer") %>